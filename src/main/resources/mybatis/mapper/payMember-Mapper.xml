<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.util.setle.service.impl.PayMemberMapper">

	<!-- 
	이메일을 기반으로 회원정보 조회
	public MemberVO selectMemberByEmail(String email);
	 -->
	<select id="selectMemberByEmail" resultType="kr.or.ddit.main.service.MemberVO" > 
		SELECT
		        MEM_ID
		      , MEM_EMAIL
		      , MEM_NAME
		      , MEM_PHONE_NUMBER
		FROM    MEMBER
		WHERE   MEM_EMAIL = #{email}
	</select>

</mapper>