<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.util.payment.service.imp.MemberMapper">

	<resultMap id="memberMap" type="kr.or.ddit.main.service.MemberVO">
		<id property="memId" column="MEM_ID"/>
	</resultMap>
	
	<!-- 회원 ID를 기반으로 MemberVO 정보를 조회합니다.
	 MemberVO selectMemberById(Long memId) -->
    <select id="selectMemberById" parameterType="long" resultMap="memberMap">
		SELECT	MEM_ID
		FROM	MEMBER
		WHERE	MEM_ID = #{memId}
    </select>
</mapper>